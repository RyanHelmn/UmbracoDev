@inherits PageTemplate<UmbracoDev.Controllers.Login.LoginPageModel>

<div class="container-fluid">
    <div class="row no-gutter h-100">
        <div class="col-12 bg-light">
            <div class="login d-flex align-items-center py-5 h-100">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-7 mx-auto">
                            <h1 class="display-4">@Model.Content.Name</h1>
                            <div class="text-muted mb-4">@Model.Content.RegisterText</div>

                            @Html.Partial("~/Views/Partials/Login/Form.cshtml", Model)
                            @Model.Content.ForgottenPasswordText
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>